<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Platforma Zamówień {% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container-fluid">

            <div class="row">
                <div class="col-md-12">

                    {% set currentPath = app.request.get('_route') %}
                    <ul class="nav nav-tabs">
                        <li role="presentation"
                            {% if currentPath == 'orders_list' %}
                                class="active"
                            {% endif %}
                            ><a href="{{ path('orders_list') }}">Lista Zamówień</a></li>
                        <li role="presentation"
                            {% if currentPath == 'order' %}
                                class="active"
                            {% endif %}
                            ><a href="{{ path('order') }}">Zamówienie</a></li>
                        <li role="presentation"
                            {% if currentPath == 'products_list' %}
                                class="active"
                            {% endif %}
                            ><a href="{{ path('products_list') }}">Produkty</a></li>
                        <li role="presentation"
                            {% if currentPath == 'clients_list' %}
                                class="active"
                            {% endif %}>
                            <a href =" {{ path('clients_list') }} ">Klienci</a></li>
                        <li role="presentation"
                            {% if currentPath == 'stats_list' %}
                                class="active"
                            {% endif %}>
                            <a href =" {{ path('stats_list') }} ">Statystyki</a></li>
                    </ul>

                </div>
            </div>

            <div class="row">
                
                <div class="col-md-12">
                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="alert alert-success alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            {{ flashMessage }}
                        </div>
                    {% endfor %}
                    {% block body %}

                    {% endblock %}
                    {% block javascripts %}
                        <script src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
                        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
                    {% endblock %}
                    </body>
                    </html>
